{
    "name": "Django Development Container",
    // Docker Composeファイルとサービス名を指定
    "dockerComposeFile": [
        "../docker-compose.dev.yml"
    ],
    "service": "web",
    "workspaceFolder": "/code",

    // VSCodeの設定
    "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.pythonPath": "/opt/venv/bin/python"
    },

    // インストールするVSCode拡張機能
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "Google.gemini-code-assist" // ← これを追記しました
    ],

    // コンテナにインストールする共通機能 (Gitなど)
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },

    // コンテナビルド後、VSCodeアタッチ後に実行するコマンド (任意)
    // "postCreateCommand": "echo 'Container created and VS Code attached!'",

    "remoteUser": "root"
}